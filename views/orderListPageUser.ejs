  <style>
    body {
      padding-top: 56px;

    }

    button {
      cursor: pointer;
      font-weight: 100;
      font-family: Helvetica, "sans-serif";
      transition: all .2s;
      width: 80px;
      border-radius: 10px;
      background: #cfef00;
      border: 1px solid transparent;
      display: flex;
      align-items: center;
      font-size: 15px;
    }

    button:hover {
      background: #c4e201;
    }

    button>svg {
      width: 34px;

      transition: transform .3s ease-in-out;
    }

    button:hover svg {
      transform: translateX(5px);
    }

    button:active {
      transform: scale(0.95);
    }

  </style>
</head>

<body>

