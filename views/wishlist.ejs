            <ul class="navbar-nav ml-auto " class="navv">

                <li class="nav-item">
                    <a style="color: white;" class="nav-link" href=" /home"> <i class="ri-home-8-line"></i></a>
                </li>
                <li class="nav-item">
                    <a style="color: white;" class="nav-link" href="/cart"><i class="ri-shopping-cart-line"></i></a>
                </li>
                <!-- <li class="nav-item">
                    <a style="color: white;" class="nav-link" href="/wishlist"><i class="ri-heart-line"></i></a>
                </li> -->
                <li class="nav-item">
                    <a style="color: white;" class="nav-link " href="/home/profile"><i
                            class="ri-account-circle-line"></i></a>
                </li>
                <!-- Add more navbar items as needed -->
            </ul>

        </div>
    </nav>



    <div class="container">

        <div class="row" style="width: 100%;">
            <div>
                <div class="container  cart-container">
                    <h2 style="font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; color: rgb(0, 159, 0);">
                        Wish List</h2>
    
                    <% if (wishlistData.length===0) { %>
                    <p style="color: red; margin-left: 80px; margin-top: 80px;"> Empty Wishlist </p>
                    <% } else if (typeof wishlistData !=='undefined' ) { %>
                    <% for (let i=0; i < wishlistData.length; i++) { %>
                    <% if (wishlistData[i].WishlistDetails && wishlistData[i].WishlistDetails.length> 0) { %>
                    <% const item=wishlistData[i].WishlistDetails[0]; %>
                    <div class="product-row">
                        <div class="product-details">
                            <div class="product-image">
                                <img src="<%= item.images[0] %>" alt="Product Image">
                            </div>
                            <div class="product-info">
                                <h4 style="font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;">
                                    <%= item.Pname %>
                                </h4>
                                <p class="text-dark"><b>₹</b>
                                    <%= item.price %>
                                </p>
                                <p>
                                    <%= item.Pcategory %>
                                </p>
                            </div>
                        </div>
                        <div class="product-quantity">
                            <a href="/wishlistAddToCartdb?id=<%= item._id %>"><button class="buy-now-btn me-2">Add to
                                    cart</button></a>
                            <a href="#" class="delete-wishlist-item-btn" data-item-id="<%= item._id %>">
                                <button class="buy-now-btn bg-danger"><i class="ri-delete-bin-5-line"></i></button>
                            </a>
                        </div>
                    </div>
                    <% } else { %>
                    <!-- <p>No wishlist items available</p> -->
                    <% } %>
                    <% } %>
                    <% } %>
    
                    <!-- Pagination -->
                    <nav aria-label="Page navigation example" class="mt-5">
                        <ul class="pagination justify-content-center">
                            <% if (currentPage > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= currentPage - 1 %>" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            <% } %>
                            <% for (let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                            </li>
                            <% } %>
                            <% if (currentPage < totalPages) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= currentPage + 1 %>" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                            <% } %>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    

 

