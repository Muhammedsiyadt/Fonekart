                document.getElementById("pincodeError").innerText = "Please enter a pincode.";
                isValid = false;
            } else {
                document.getElementById("pincodeError").innerText = "";
            }

            // Prevent form submission if validation fails
            if (!isValid) {
                event.preventDefault();
            }

            return isValid;
        };

