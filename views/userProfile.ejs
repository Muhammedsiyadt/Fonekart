  <!-- Custom CSS -->
  <style>
    body {
      background-color: rgba(0, 255, 0, 0.123);
      font-family: 'Arial', sans-serif;

    }

    .profile-container {
      background-color: #ffffff80;
      border-radius: 10px;
      /* box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); */
      overflow: hidden;

      margin: auto;
      padding: 30px;
    }

    .profile-header {
      text-align: center;
      margin-bottom: 30px;
    }

    .profile-icon {
      font-size: 24px;
    }

    .logout-btn {
      margin-top: 20px;
    }

    /* Personal Information on Left, Buttons on Right */
    .personal-info {
      border-right: 2px solid #dee2e6;
      padding-right: 20px;
      margin-right: 20px;
    }

    .personal-info p {
      margin-bottom: 15px;
      color: #495057;
    }

    .button-container {
      text-align: left;
      margin-top: 20px;
    }

    .button-container a {
      margin-right: 15px;
      margin-bottom: 15px;
    }

    #batt:hover {
      transform: translateY(-1px);
      box-shadow: 0 10px 20px rgba(27, 27, 27, .5);

    }

    .Btn {
      display: flex;
      align-items: center;
      justify-content: flex-start;
      width: 45px;
      height: 45px;
      border: none;
      border-radius: 50%;
      cursor: pointer;
      position: relative;
      overflow: hidden;
      transition-duration: .3s;
      box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.199);
      background-color: rgb(255, 65, 65);
    }

    /* plus sign */
    .sign {
      width: 100%;
      transition-duration: .3s;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .sign svg {
      width: 17px;
    }

    .sign svg path {
      fill: white;
    }

    /* text */
    .text {
      position: absolute;
      right: 0%;
      width: 0%;
      opacity: 0;
      color: white;
      font-size: 1.2em;
      font-weight: 600;
      transition-duration: .3s;
    }

    /* hover effect on button width */
    .Btn:hover {
      width: 125px;
      border-radius: 40px;
      transition-duration: .3s;
    }

    .Btn:hover .sign {
      width: 30%;
      transition-duration: .3s;
      padding-left: 20px;
    }

    /* hover effect button's text */
    .Btn:hover .text {
      opacity: 1;
      width: 70%;
      transition-duration: .3s;
      padding-right: 10px;
    }

    /* button click effect*/
    .Btn:active {
      transform: translate(2px, 2px);
    }

    /* Responsive Styling */
    @media (max-width: 767px) {
      .personal-info {
        border-right: none;
        padding-right: 0;
        margin-right: 0;
        margin-bottom: 20px;
      }

      .button-container {
        text-align: center;
      }

      .button-container a {
        margin-right: 0;
        margin-bottom: 10px;
      }
    }
  </style>
</head>

