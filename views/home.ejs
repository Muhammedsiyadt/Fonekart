    .card-container {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      
    }

    .card {
      width: 100%;
      max-width: 300px;
      border: 1px solid #ccc;
      border-radius: 8px;
      padding: 15px;
      box-sizing: border-box;

    }

    .card img {
      width: 100%;
      max-height: 150px;
      object-fit: cover;
      border-radius: 8px;
      margin-bottom: 10px;
      
    }

    .card h2 {
      margin-top: 0;
    }

    .card button {
      background-color: #4CAF50;
      color: white;
      padding: 10px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .footer {
      background-color: #f8f9fa;
      padding: 20px 0;
      text-align: center;
    }

    .btn:link,
    .btn:visited {
      text-transform: uppercase;
      text-decoration: none;
      color: rgb(27, 27, 27);
      padding: 10px 30px;
      border: 1px solid;
      border-radius: 1000px;
      display: inline-block;
      transition: all .2s;
      position: relative;
    }

    .btn:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(27, 27, 27, .5);
    }

    .btn:active {
      transform: translateY(-3px);
    }

    .btn::after {
      content: "";
      display: inline-block;
      height: 100%;
      width: 100%;
      border-radius: 100px;
      top: 0;
      left: 0;
      position: absolute;
      z-index: -1;
      transition: all .3s;
    }

    .btn:hover::after {
      background-color: rgb(0, 238, 255);
      transform: scaleX(1.4) scaleY(1.5);
      opacity: 0;
    }



    @media (min-width: 600px) {
      .card {
        width: calc(33.33% - 20px);
      }
    }


    .category-card {
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
      transition: transform 0.3s;
    }

    .category-card:hover {
      transform: scale(1.05);
    }

    .category-card-img {
      height: 170px;
      overflow: hidden;
    }

    .category-card-img img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .category-card-body {
      text-align: center;
      padding: 15px;
      background-color: #f8f9fa;
      /* Light grey background color */
    }

    .category-title {
      margin-top: 10px;
      font-size: 18px;
      color: #343a40;
      /* Dark text color */
    }

    #fullcards:hover {
      transform: scale(1.05);
      overflow: hidden;
      box-shadow: 0 0 20px rgba(10, 10, 10, 10);
      transition: transform 0.3s;

    }

    .searchBar {
      width: 100vw;
      height: 4rem;
      background: linear-gradient(298deg, #111216 -34.19%, rgba(91, 99, 120, 0.00) 1164.24%);
    }

    .searchBox input {
      outline: none;
      width: 45vw;
      height: 2rem;
      padding: 0.35rem 1.25rem;
      margin: auto 0;
      border-radius: 0.25rem 0rem 0rem 0.25rem;
      background: #FFF;
      border: none;
    }

    .searchBox input::placeholder {
      color: rgba(0, 0, 0, 0.215);
      font-family: sans-serif;
      font-size: 1rem;
      font-style: normal;
