	<h1>Categary</h1>
	<!-- SIDEBAR -->

	<h1 style="margin-left: 310px; margin-bottom: 20px; color: rgb(35, 34, 43);">CATEGORY MANAGEMENT</h1>

	<div class="container">
		<div class="button-container" style="margin-right: 500px; display: flex;">
			<a id="btn" href="/category/add-category"><button  style="background-color: rgb(56, 210, 56); border-radius: 10px;">Add Category</button></a>
			<a id="btn" href="/category/unlisted-category"><button  style="background-color: rgb(56, 210, 56); border-radius: 10px;">Unlisted Category</button></a>
		</div>

		<table>
			<thead>
				<tr>
					<th>Image</th>
					<th>Category Name</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				<% if(typeof CategoryDetails !=='undefined' ){ %>
					<% for (let i=0; i < CategoryDetails.length; i++){ %>

						<tr>
							<td class="image-cell"><img style="width: 100px; " src="<%= CategoryDetails[i].image %>"
									alt="Category Image"></td>
							<td>
								<%= CategoryDetails[i].category %>
							</td>
							<td class="action-buttons">
								<a href="/category/edit-category?id=<%= CategoryDetails[i]._id %>"><button
										style="background-color: rgb(94, 224, 94); width: 60px;"
										class="edit">Edit</button></a>
								<a href="/category/delete-category?id=<%= CategoryDetails[i]._id %>"><button
										style="background-color: rgb(233, 85, 85); width: 60px;"
										class="delete">Delete</button></a>
							</td>
						</tr>
						<% } %>
							<% } %>


								<!-- Add more rows as needed -->
			</tbody>
		</table>
	</div>



	<script src="js/adminhome.js"></script>
