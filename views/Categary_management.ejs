	<style>
		body {
			margin: 0;
			/* font-family: Arial, sans-serif; */
			padding: 0;
		}

		.container {
			width: 100%;
			max-width: 800px;
			margin: 0 auto;

		}

		.button-container {
			text-align: center;
			margin-bottom: 20px;
		}

		button {
			padding: 10px;
			margin: 5px;
			font-size: 16px;
			width: 200px;
		}
		

		table {
			width: 1110px;
			border-collapse: collapse;
			margin-top: 20px;
		}
		#btn:hover {
			background-color: rgb(255, 238, 0);
		} 

		th,
		td {
			border: 1px solid #000000;
			padding: 8px;
			text-align: center;
		}

		tbody {
			background-color: rgb(255, 255, 255);
			border-color: black;

		}

		th {
			background-color: #3cdaba;
			border-color: black;

		}

		.image-cell {
			max-width: 50px;
			overflow: hidden;
		}

		.action-buttons {
			text-align: center;
		}

		.edit,
		.delete {
			padding: 5px 10px;
			margin: 2px;
			font-size: 14px;
		}
	</style>


</head>

