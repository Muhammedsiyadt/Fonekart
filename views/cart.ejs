    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>


    <script>


        $(document).ready(function () {
            var quantitySelect = document.querySelectorAll("#quantity");

            quantitySelect.forEach((qtyselected, index) => {
                qtyselected.addEventListener('change', function (e) {
                    var availableQuantity = parseInt(quantitySelect[index].getAttribute('data-max-quantity'));
                    var enteredQuantity = parseInt(quantitySelect[index].value);

                    if (enteredQuantity > availableQuantity) {
                        // Show out of stock modal
                        $('#outOfStockModal').modal('show');
                        quantitySelect[index].value = availableQuantity; // Reset to the maximum available quantity
                    } else if (enteredQuantity < 1) {
                        // Show invalid quantity modal
                        // (You can add a similar modal for invalid quantity if needed)
                        $('#outOfStockModal').modal('show');
                        quantitySelect[index].value = 1; // Reset to 1 if entered quantity is less than 1
                    } else {
                        // Quantity is valid, proceed with the AJAX request
                        var url = document.querySelectorAll('.quantity')[index].getAttribute('data-url');
                        var quantity = enteredQuantity;

                        $.ajax({
                            url: `${url}&qty=${quantity}`,
                            method: "Post",
                            success: function (data) {
                                if (data.message == "outOfStock") {
                                    // Show out of stock modal
                                    $('#outOfStockModal').modal('show');
                                    quantitySelect[index].value = availableQuantity; // Reset to the maximum available quantity
                                } else {
                                    location.reload();
                                    console.log("Data:", data);
                                }
                            },
                            error: function (error) {
                                console.error("Error:", error);
                            },
                        });
                    }
                });
            });
        });

    </script>



</body>

