                </li>
                <li class="nav-item">
                    <a style="color: white;" class="nav-link" href="/cart"><i class="ri-shopping-cart-line"></i></a>
                </li>
                <li class="nav-item">
                    <a style="color: white;" class="nav-link" href="/wishlist"><i class="ri-heart-line"></i></a>
                </li>
                <li class="nav-item">
                    <a style="color: white;" class="nav-link " href="/home/profile"><i
                            class="ri-account-circle-line"></i></a>
                </li>
                <!-- Add more navbar items as needed -->
            </ul>

        </div>
    </nav>

    <div class="container">

        <div class="row">
            <div class="col-md-8">
                <div class="container cart-container">
                    <h2>Your shopping cart</h2>
                    <% if(cartData.length===0){ %>
                        <p style="color: red; margin-left: 80px; margin-top: 80px;">Empty Cart</p>
                        <% } %>
                            <% if(typeof cartData !=='undefined' ){ %>
                                <% for(let i=0 ; i<cartData.length ; i++){ %>
                                    <div class="product-row">
                                        <div class="product-details">
                                            <div class="product-image">
                                                <img src="<%= cartData[i].productDetails[0].images %>"
                                                    alt="Product Image">
                                            </div>
                                            <div class="product-info">
                                                <h4 style="color: black;">
                                                    <%= cartData[i].productDetails[0].Pname %>
                                                </h4>
                                                <p>
                                                    <%= cartData[i].productDetails[0].Pcategory %>
                                                </p>
                                                <p><b style="color: black;">₹ <%= cartData[i].productDetails[0].price %>
                                                    </b></p>
                                            </div>
                                        </div>
                                        <div class="product-quantity quantity"
                                            data-url="/api/updateCartQuantity?pid=<%=cartData[i].productDetails[0]._id %>">
                                            <input type="number" name="num" id="quantity"
                                                style="width: 50px; margin-right: 10px;"
                                                value="<%= cartData[i].cartItems.quantity %>"
                                                class="form-control quantity-input"
                                                data-max-quantity="<%= cartData[i].productDetails[0].quantity %>">

                                            <div class="modal fade" id="outOfStockModal" tabindex="-1"
                                                aria-labelledby="outOfStockModalLabel" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title text-danger"
                                                                id="outOfStockModalLabel">Out of Stock</h5>
                                                            <button type="button" class="btn-close"
                                                                data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <p id="outOfStockMessage">This product is out of
                                                                stock. Please enter a valid quantity.</p>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary"
                                                                data-bs-dismiss="modal">Close</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <a href="/deleteCartItem?id=<%= cartData[i].productDetails[0]._id %>">
                                                <button class="buy-now-btn"><i
                                                        class="ri-delete-bin-5-line"></i></button></a>
                                        </div>
                                    </div>
                                    <% } %>
                                        <% } %>
                </div>
            </div>

            <!-- Checkout Box -->
            <% if (cartData && cartData.length> 0) { %>
                <div class="col-md-4" style="padding-right: 0">
                    <div class="checkout-box mt-4 pe-5">
                        <h2 style="margin-bottom: 50px; text-align: center;">Summary</h2>
                        <% let Subtotal=cartData.reduce((total, item)=> {
                            return total + ( item.cartItems.quantity * item.productDetails[0].price )
                            }, 0) %>
                            <p><b>Subtotal - </b><span style="margin-left: 50px;"><b style="color: magenta;">₹ <%=
                                            Subtotal.toFixed(2) %></b></span></p>
                            <p><b>Discount - </b><span style="margin-left: 50px;"><b>₹ 0</b></span></p>
                            <p><b>Shipping - </b><span style="margin-left: 50px;"><b
                                        style="color: green;">Free</b></span></p>
                            <p><b>Total - </b><span style="margin-left: 80px;"><b style="color: crimson;">₹ <%=
                                            Subtotal.toFixed(2) %></b></span></p>

                            <!-- Checkout Button -->
                            <a href="/cart/checkout"><button class="buy-now-btn">Proceed to Payment</button></a>
                    </div>
                </div>
                <% } %>

        </div>
    </div>

