 <!-- Compact Filter Toggle Button -->
<div class="container-fluid mt-3">
  <div class="row">
    <div class="col-md-12 text-center">
      <button class="compact-filter-btn mt-5" id="toggleFiltersBtn">
        <i class="fas fa-sliders-h mr-2"></i> Filter
      </button>
    </div>
  </div>
</div>

<!-- Filter Options Section (Initially hidden) -->
<div class="container filter-options mt-4">
  <div class="row">
    <div class="col-md-3">
      <div class="form-group">
        <label for="category">Category:</label>
        <select class="form-control" id="category">
          <option value="All">All</option>
          <option value="Mobile">Mobile</option>
          <option value="Laptop">Laptop</option>
          <option value="Earbuds">Earbuds</option>
          <option value="Watches">Watches</option>
        </select>
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-group">
        <label for="minPrice">Min Price:</label>
        <input type="number" class="form-control" id="minPrice" placeholder="Min Price">
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-group">
        <label for="maxPrice">Max Price:</label>
        <input type="number" class="form-control" id="maxPrice" placeholder="Max Price">
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-group">
        <label for="sort">Sort Price:</label>
        <select class="form-control" id="sort">
          <option value="highToLow">High to Low</option>
          <option value="lowToHigh">Low to High</option>
        </select>
      </div>
    </div>
    <div class="col-md-12 text-center">
      <button class="btn btn-primary btn-block">Apply Filters</button>
    </div>
  </div>
</div>


<div class="container" style="padding-bottom: 100px;">
  <div class="row">
      <!-- Product Listing -->
      <div class="col-md-12">
          <div class="row" style="margin-top: 30px;">

              <% if(typeof message !=='undefined' ){ %>
              <p style="color: red;">
                  <%= message %>
              </p>
              <% } %>

              <!-- Product Cards -->
              <% for(let i=0 ; i<productList.length ; i++ ){ %>
              <div class="col-md-4 col-sm-6 col-xl-3 p-2">
                  <a style="text-decoration: none;" href="/home/singleProduct?id=<%= productList[i]._id %>">
                      <div class="product-card text-dark" style="justify-content: center; text-align: center; height: 430px; background-color: rgb(255, 255, 255);">
                        <% if (productList[i]?.offerDetails && productList[i]?.offerDetails[0] != null) { %>
                          <div class="offer  text-success" style=" width: 100px; border-radius: 10px;">
                              <h6><b>Offer<%= productList[i]?.offerDetails[0]?.discount %>%</b></h6> 
                          </div>
                      <% } %>
                      
                          <img style="height: 250px; width: 250px; margin-bottom: 20px;" src="<%= productList[i].images[0] %>"
                              alt="Product 1" class="img-fluid">
                          <h4>
                              <%= productList[i].Pname %>
                          </h4>
                          <p>₹ <%= productList[i].price %>
                          </p>
                          
                          <!-- <button class="btn btn-success">Buy Now</button> -->
                      </div>
                  </a>
              </div>
              <% } %>
          </div>
      </div>

  </div>
</div>


