    <script>
        $(document).ready(function () {
            // Change main image when clicking on thumbnail images
            $(".thumbnail img").click(function () {
                var newSrc = $(this).attr('src');
                $("#main-image").attr('src', newSrc);
            });

            // Image zooming on mouse move over the main image
            $("#main-image").on({
                mousemove: function (event) {
                    var offsetX = event.offsetX;
                    var offsetY = event.offsetY;
                    var imgWidth = $(this).width();
                    var imgHeight = $(this).height();
                    var mouseXPercent = offsetX / imgWidth * 100;
                    var mouseYPercent = offsetY / imgHeight * 100;
                    var scaleAmount = 1.5;
                    var scaledWidth = imgWidth * scaleAmount;
                    var scaledHeight = imgHeight * scaleAmount;
                    var offsetXPercent = (scaledWidth - imgWidth) / 2 / scaledWidth * 100;
                    var offsetYPercent = (scaledHeight - imgHeight) / 2 / scaledHeight * 100;
                    $(this).css({
                        "transform-origin": (mouseXPercent - offsetXPercent) + "% " + (mouseYPercent - offsetYPercent) + "%",
                        "transform": "scale(" + scaleAmount + ")",
                        "transition": "transform 0.3s ease"
                    });
                },
                mouseleave: function () {
                    $(this).css({
                        "transform": "scale(1)",
                        "transition": "transform 0.3s ease"
                    });
                }
            });
        });
    </script>




